Import("env")
Import("libutil")

b = "build_xlink"

localEnv = env.Clone()

localEnv.VariantDir(b, "../../xlink")
xlink = localEnv.Program(b + "/xlink", LIBS = [libutil, "m"], source = [
	b + "/assign.c",
	b + "/group.c",
	b + "/main.c",
	b + "/mapfile.c",
	b + "/object.c",
	b + "/output.c",
	b + "/patch.c",
	b + "/section.c",
	b + "/smart.c"
	])

Return("xlink")
