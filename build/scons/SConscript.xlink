Import("env")
Import("libutil")

b = "build_xlink"

localEnv = env.Clone()

localEnv.VariantDir(b, "../../xlink", duplicate = 0)
xlink = localEnv.Program(b + "/xlink", LIBS = [libutil, "m"], source = [
	b + "/amiga.c",
	b + "/assign.c",
	b + "/commodore.c",
	b + "/sega.c",
	b + "/group.c",
	b + "/image.c",
	b + "/main.c",
	b + "/mapfile.c",
	b + "/object.c",
	b + "/patch.c",
	b + "/section.c",
	b + "/smart.c"
	])

Return("xlink")
