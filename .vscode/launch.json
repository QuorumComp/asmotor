    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug xlink",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/cmake/debug/xlink/xlink",
            "args": ["-otest.gb", "-ts", "irqtest.obj"],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}/../gb-irqtest",
            "environment": [],
            "externalConsole": true,
            "MIMode": "lldb"
        },
        {
            "name": "Debug motorz80",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/cmake/debug/xasm/z80/motorz80",
            "args": ["-mcz", "test_literal.asm"],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}/test/z80",
            "environment": [],
            "externalConsole": true,
            "MIMode": "lldb"
        },
        {
            "name": "Debug motordcpu",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/cmake/debug/xasm/dcpu-16/motordcpu16",
            "args": ["-fv", "-otest.vh", "test.asm"],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}/test/dcpu-16",
            "environment": [],
            "externalConsole": true,
            "MIMode": "lldb"
        }
    ]
}