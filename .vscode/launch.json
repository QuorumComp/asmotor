    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug xlink",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/cmake/debug/xlink/xlink",
            "args": ["-sMain", "-mmap.map", "-tg", "-ogbfade.gb", "main.obj", "user.obj", "pics.obj", "../minios/mos.lib"],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}/test/gameboy/slidshow",
            "environment": [],
            "externalConsole": true,
            "MIMode": "lldb"
        },
        {
            "name": "Debug motorz80",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/cmake/debug/xasm/z80/motorz80",
            "args": ["-fv", "-otest.vh", "-mcg", "test_literal.asm"],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}/test/z80",
            "environment": [],
            "externalConsole": true,
            "MIMode": "lldb"
        }
    ]
}